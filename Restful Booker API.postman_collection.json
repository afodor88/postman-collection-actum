						"exec": [
							"pm.test(\"Status code is 200\", function () {\r",
							"    pm.response.to.have.status(200);\r",
							"});\r",
							"\r",
							"const response = pm.response.json();\r",
							"pm.test(\"Booking should be created\", function () {\r",
							"    pm.expect(response.booking.firstname).to.eql(\"Vlastimil\", \"Username not Vlastimil\");\r",
							"    pm.expect(response.booking.lastname).to.eql(\"Matějka\", \"Lastname not Matějka\");\r",
							"    pm.expect(response.booking.totalprice).to.eql(0);\r",
							"    pm.expect(response.booking.depositpaid).to.eql(true);\r",
							"    pm.expect(response.booking.bookingdates.checkin).to.eql(\"2018-01-01\");\r",
							"    pm.expect(response.booking.bookingdates.checkout).to.eql(\"2019-01-01\");\r",
							"    pm.expect(response.booking.additionalneeds).to.eql(\"original text\");\r",
							"\r",
							"});\r",
							"\r",
							"pm.collectionVariables.set('id', response.bookingid);\r",
							"console.log(response.bookingid);\r",
